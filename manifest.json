{
  "manifest_version": 3,
  "name": "BoomerTabs",
  "short_name": "BoomerTabs",
  "version": "1.0.0",
  "description": "Bigger, customizable tab tiles with groups, sizing controls, and fast navigation.",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "favicon"
  ],
  "optional_permissions": [
    "windows"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "BoomerTabs",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "_favicon/*"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}
